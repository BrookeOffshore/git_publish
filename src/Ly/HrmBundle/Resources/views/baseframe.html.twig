<!DOCTYPE html>
<html>
    <head>
        {% block head %}            
            <title>{% block title %}{% endblock %} - HRM</title>
        {% endblock %}
        
        {% block stylesheets %}
        	<link rel="shortcut icon" href="{{ asset('logomini.ico') }}">
            <link href="{{ asset('bundles/hrm/css/doc.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/hrm/css/responsive-tables.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/hrm/css/normalize.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/hrm/css/main.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/hrm/css/font-awesome.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/hrm/css/jquery.datetimepicker.css') }}" rel="stylesheet" />
            <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    
	<body>
		<div class="page">			
				<div class="fixed">					
					<nav class="top-bar" data-topbar>						
								<ul class="title-area">
									<li class="name">
										<h1><a href="{{ path('main_page') }}"><img src="{{ asset('bundles/hrm/images/brooke_offshore_logo.png') }}" /></a></h1>
									</li>
									<li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
								</ul>
								
								<section class="top-bar-section">

							    	<ul class="right">

									     <li class="has-form">
									     	
									     	
								         	
								          		{% block topsearchbar %}
								          			{{ render(controller('LyHrmBundle:Operation:topbarsearch')) }}
								          		{% endblock %}
								          		
								          		
								        	
									     </li>					
									     					
									<!--	<li class="divider"></li>
										
										<li class="has-dropdown">
								        	<a href="#">Accounts</a>
								        		<ul class="dropdown">
								        			<li><a href="#">List 1</a></li>
								        			<li><a href="#">List 2</a></li>								        			
								        		</ul>
								      	</li>
									-->    							     	
										<li class="divider"></li>
										
										<li class="has-dropdown">
								        	<a href="#">Operations</a>
								        		<ul class="dropdown">
								        			<li><a href="{{ path('screen_page') }}">Crew Screen List</a></li>
								        			<li><a href="{{ path('mobrecord_brief') }}">Mobilization Records</a></li>
								        			<li><a href="{{ path('crew_report') }}">Crewing Report</a></li>
								        			<li><a href="{{ path('beta_crew_page') }}">Beta Crew Pool</a></li>
								        			<li><a href="{{ path('vessel_list_page') }}">Client & Vessel</a></li>
								        			<li><a href="{{ path('sticker_page') }}">Notification</a></li>
								        		</ul>
								      	</li>
										
										<!--<li class="divider"></li>
										
										<li class="has-dropdown">
								        	<a href="#">System</a>
								        		<ul class="dropdown">
								        			<li><a href="{{ path('vessel_page') }}">Company & Vessel</a></li>
								        			<li><a href="#">Notification</a></li>
								        		</ul>
								    </li>-->
										
										<li class="divider"></li>
								    	<li class="has-dropdown">
								        	<a href="#">{% block topsearchusername %}
								          			{{ render(controller('LyHrmBundle:Operation:topbarusername')) }}
								          		{% endblock %}</a>
								        		<ul class="dropdown">
								        			<li><a href="{{ path('fos_user_profile_edit') }}">Edit Profile</a></li>
								        			<li><a class="alert button" href="{{ path('fos_user_security_logout') }}">Log Out</a></li>
								        		</ul>
								      	</li>
								    </ul>

  								</section>
					
						
					</nav>
				</div>
						
				<section id="main-content">
			        {% block body %}
			        
			        {% endblock %}
		        </section>
		</div>

    </body>
    {% block javascripts %}
    	<script src="{{ asset('bundles/hrm/js/vendor/jquery.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/vendor/modernizr.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/vendor/fastclick.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.topbar.js') }}"></script>    	
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.dropdown.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.alert.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.orbit.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.tab.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.tooltip.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/foundation.equalizer.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/foundation/responsive-tables.js') }}"></script>
    	<script src="{{ asset('bundles/hrm/js/jquery.datetimepicker.js') }}"></script>
    	
    	

    	<script type="text/javascript">    		
    		$(document).foundation({
			  dropdown: {
			    // specify the class used for active dropdowns
			    active_class: 'open'
			  }			  
			});
			
			$(document).foundation({
			    tab: {
			        callback : function (tab) {
			        console.log(tab);
			        }
			    }
			});
			
			$(".datetimepicker").datetimepicker({
				format:'d/m/Y H:i'
			});
			
			$(".datepicker").datetimepicker({
				format:'d/m/Y'
			});
			
    	</script>
    {% endblock %}
</html>